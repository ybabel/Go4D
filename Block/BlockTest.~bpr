# ---------------------------------------------------------------------------
!if !$d(BCB)
BCB = $(MAKEDIR)\..
!endif

# ---------------------------------------------------------------------------
# Section EDI
# ---------------------------------------------------------------------------
# La section suivante du Makefile du projet est gérée par l'EDI de BCB.
# Il est recommandé d'utiliser l'EDI pour modifier les valeurs de cette
# section.
# ---------------------------------------------------------------------------

VERSION = BCB.04.04
# ---------------------------------------------------------------------------
PROJECT = "..\..\..\..\..\Program Files\Borland\exe\BlockTest.exe"
OBJFILES = ..\..\lib\BlockTest.obj ..\..\lib\BlockDemo.obj ..\..\lib\Common.obj \
  ..\..\lib\Device.obj ..\..\lib\Image.obj ..\..\lib\Palette.obj \
  ..\..\lib\PlugDrawer.obj ..\..\lib\Viewer.obj ..\..\lib\Wingdll.obj \
  ..\..\lib\Geom.obj ..\..\lib\Camera.obj ..\..\lib\Plot.obj \
  ..\..\lib\Drawer2D.obj ..\..\lib\Particle.obj ..\..\lib\Actions.obj \
  ..\..\lib\Drawer.obj ..\..\lib\Pixeler.obj ..\..\lib\Tools.obj
RESFILES = BlockTest.res
RESDEPEN = $(RESFILES)
LIBFILES =
IDLGENFILES =
IDLFILES =
LIBRARIES =
SPARELIBS = Vcl40.lib
PACKAGES = Vcl40.bpi Vclx40.bpi vcljpg40.bpi Vclmid40.bpi Vcldb40.bpi bcbsmp40.bpi \
  ibsmp40.bpi vcldbx40.bpi Qrpt40.bpi TeeUI40.bpi teedb40.bpi tee40.bpi Dss40.bpi
DEFFILE =
# ---------------------------------------------------------------------------
PATHCPP = .;..\3dLib
PATHASM = .;
PATHPAS = .;
PATHRC = .;
DEBUGLIBPATH = $(BCB)\lib\debug
RELEASELIBPATH = $(BCB)\lib\release
USERDEFINES = usefixed
SYSDEFINES = _RTLDLL;NO_STRICT;USEPACKAGES
# ---------------------------------------------------------------------------
CFLAG1 = -I..\Editor;..\3dLib;$(BCB)\include;$(BCB)\include\vcl -Od -Hc \
  -H=$(BCB)\lib\vcl40.csm -w -Ve -r- -a8 -k -y -v -vi- -c -b- -w-par -w-inl -Vx \
  -tW -tWM -D$(SYSDEFINES);$(USERDEFINES)
IDLCFLAGS = -I..\Editor -I..\3dLib -I$(BCB)\include -I$(BCB)\include\vcl -src_suffixcpp \
  -Dusefixed
PFLAGS = -U..\Editor;..\3dLib;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) \
  -I..\Editor;..\3dLib;$(BCB)\include;$(BCB)\include\vcl -N2..\..\lib \
  -N0..\..\lib -Dusefixed -$YD -$W -$O- -v -JPHNE -M
RFLAGS = -i..\Editor;..\3dLib;$(BCB)\include;$(BCB)\include\vcl -Dusefixed
AFLAGS = /i..\Editor /i..\3dLib /i$(BCB)\include /i$(BCB)\include\vcl /dusefixed /mx /w2 \
  /zd
LFLAGS = -L..\Editor;..\3dLib;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) -aa -Tpe -x \
  -Gn -v
# ---------------------------------------------------------------------------
ALLOBJ = c0w32.obj Memmgr.Lib $(PACKAGES) sysinit.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES) $(LIBRARIES) import32.lib cp32mti.lib
# ---------------------------------------------------------------------------
